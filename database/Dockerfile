FROM mysql:8.0

WORKDIR /scripts

ARG MYSQL_ROOT_PASSWORD
ARG MYSQL_USER
ARG MYSQL_PASSWORD
ARG MYSQL_DATABASE
ARG FRONTEND_URL

ENV MYSQL_ROOT_PASSWORD=${MYSQL_ROOT_PASSWORD}
ENV MYSQL_USER=${MYSQL_USER}
ENV MYSQL_PASSWORD=${MYSQL_PASSWORD}
ENV MYSQL_DATABASE=${MYSQL_DATABASE}

RUN echo "Key on commit: ${MYSQL_DATABASE}"


COPY ./sql/database.sql .
RUN sed -i  "s|\${FRONTEND_URL}|${FRONTEND_URL}|g; \
            s|\${DATABASE_NAME}|${MYSQL_DATABASE}|g" \
            database.sql

RUN cp database.sql /docker-entrypoint-initdb.d/database.sql