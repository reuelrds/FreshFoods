<?xml version="1.0" encoding="UTF-8"?>
<Context>
	<Resource name="jdbc/${SERVLET_CONTEXT_NAME}" auth="Container" type="javax.sql.DataSource"
        maxTotal="10" maxIdle="5" maxWait="10000"
        username="${DATABASE_USERNAME}" password="${DATABASE_PASSWORD}" driverClassName="com.mysql.cj.jdbc.Driver"
        url="jdbc:mysql://${MYSQL_HOST}:${MYSQL_PORT}/${DATABASE_NAME}"/>
</Context>